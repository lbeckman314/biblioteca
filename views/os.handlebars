<h2 id="table">{{table}}</h2>
<p>⇢ the operating systems the progam can run on</p>
<br />
<br />

<form action="/insert" method="get">
<fieldset>
  <legend>add new os</legend>
    <label>
      <span class="name">name</span>
      <span> ⇢ </span>
      <input size="20" name="name" placeholder="coolOS" id="name" type="text_input">
    </label>
    <label>
        <span class="name">url</span>
        <span> ⇢ </span>
        <input size="20" name="url" placeholder="www.coolos.com" id="url" type="text_input">
    </label>
  <input class="submit" value="Submit" type="submit">
</fieldset>
</form>

<table>
  <tr>
    <th>name</th>
    <th>url</th>
  </tr>
  {{#each os}}
  <tr>
    <td>{{name}}</td>
    <td><a href="{{url}}">{{url}}</a></td>
    <td>
    <form class="edit">
    <input value="Edit" class="buttonEdit" type="submit">
    <input name="id" value={{id}} class="hidden" type="hidden">
    </form>
    <form action="/delete" method="get">
    <input value="Delete" class="buttonDelete" type="submit">
    <input name="id" value={{program.id}} class="hidden-table" type="hidden"></form>
    </td>
  </tr>
  {{/each}}
</table>

